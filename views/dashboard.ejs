<div class="jumbotron">
<% if(typeof locals.data !='undefined'){ %>
	<h1 class="text-center"><%= data[0] %></h1>
	<h3 class="text-center">Write a comment:</h3>
	<textarea class="form-control" id="new-thread" rows="3"></textarea>
	<br>
	<button class="btn btn-primary thread_submit" data-id="<%- data[data.length - 1] %>" type="submit">
		Submit
	</button>
	<% console.log(data[1]) %>
  <% } %>

  <% if(typeof locals.renderArr !='undefined'){ %>
	<h1 class="text-center"><%= renderArr[0].name %></h1>
	<h1><i class='fas fa-paw' style='font-size:100px'></i></h1>

	<br>
	<h3 class="text-center">Write a comment:</h3>

	<textarea class="form-control" id="new-thread" rows="3"></textarea>
	<br>
	<button class="btn btn-primary thread_submit" type="submit">
		Submit
	</button>
	<br>
	<% for (var i = 0; i < renderArr.length; i ++) { %>
	<div class="card">
		<div class="card-header">
			<%= renderArr[i].username %>:
		</div>
		<div class="card-body">
		  <h5 class="card-title">Posted at: <%= renderArr[i].posted %></h5>
		  <p class="card-text" style="font-size: 20px;"><%= renderArr[i].text %></p>
		  <a href='#' class="btn btn-primary">Go to profile</a>
		</div>
	  </div>
	  <% } %>
	<% } %>
</div>
