<div class="hero-wrapper">
  <div class="jumbotron hero-section d-md-flex justify-content-around">
    <img src="/multiple-dogs.png" alt="two-dogs" height="150px" " />
		<div class="hero-title ">
			<h1 class="text-center ">DOGSTR</h1>
			<h4 class="text-center ">
				Schedule a play date for you and your pup!
			</h4>
			<% if(typeof locals.userData !='undefined'){ %>
				<h4 class="text-center">Hello, <%= userData.name %></h4>
				<a href="/users/profile/<%- userData.id %>" class="btn btn-info profile">Profile</a>
				<% } %>
