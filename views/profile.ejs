<script src="profile.js"></script>

<html>
  <head>
    <title></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet"/>
  </head>
  <body>
    <div class="container">
      <% if (typeof message != 'undefined') { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= message.message %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>
      <div class="page-header">
        <% if (typeof user_data != 'undefined') { %>
        <h1><%= user_data.name %> Profile</h1>
        <% } %>
      </div>
      <form class="login-form form-horizontal" method="post" role="form">
        <input name="_csrf" type="hidden"/>
        <div class="form-group">
          <label class="col-sm-4">First Name</label>
          <div class="col-sm-8">
            <input class="form-control" placeholder="Your first name" required="required" name="givenName" id="first_name" type="text"/>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">Last Name</label>
          <div class="col-sm-8">
            <input class="form-control" placeholder="Your last name" required="required" name="surname" id="last_name" type="text"/>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">City</label>
          <div class="col-sm-8">
            <input class="form-control" placeholder="e.g. City" required="required" name="city" id="city" type="text"/>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">State</label>
          <div class="col-sm-8">
            <input class="form-control" placeholder="e.g. CA" required="required" name="state" id="state" type="text"/>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">ZIP</label>
          <div class="col-sm-8">
            <input class="form-control" placeholder="e.g. 94116" required="required" name="zip" id="zip" type="text"/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <% if (typeof user_data != 'undefined') { %>
            <button class="login btn btn-primary" type="submit" id="my_profile_submit" data-id="<%- user_data.id %>">Save</button>
            <% } %>
          </div>
        </div>
        <div class="pull-right"><a href="/dashboard">Return to home page</a></div>
      </form>
    </div>
  </body>
</html>
